<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card_rounds"
    tools:context="com.it.dnc.keoh.ContactItemFragment2"


    >

    <!--android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:foreground="?android:attr/selectableItemBackground"-->



    <ImageView
        android:id="@+id/imgContact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:contentDescription="Contact Image"
        android:src="@drawable/sample_contact_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circleCrop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgContact"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imgContact"

        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/circleCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtContactCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtContactName"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:id="@+id/tbSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@+id/circleCrop"
        app:layout_constraintTop_toBottomOf="@+id/txtContactName"

        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"



        >

        <TableRow
            android:id="@+id/trFacebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="2sp"

            >

            <ImageView
                android:id="@+id/icoFacebook"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_facebook" />

            <TextView
                android:id="@+id/txtFacebook"
                android:layout_width="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_height="20dp"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:id="@+id/trInstagram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="2sp"

            >

            <ImageView
                android:id="@+id/icoInstagram"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="1dp"

                android:src="@drawable/ic_instagram" />

            <TextView
                android:id="@+id/txtInstagram"
                android:layout_width="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_height="20dp"
                android:text="TextView" />
        </TableRow>


    </TableLayout>


</android.support.constraint.ConstraintLayout>
